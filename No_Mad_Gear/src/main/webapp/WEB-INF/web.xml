<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register_user</servlet-name>
        <servlet-class>com.shopping.no_mad_gear.servlets.register_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_user</servlet-name>
        <servlet-class>com.shopping.no_mad_gear.servlets.login_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout_user</servlet-name>
        <servlet-class>com.shopping.no_mad_gear.servlets.logout_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_product</servlet-name>
        <servlet-class>com.shopping.no_mad_gear.servlets.add_product</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_category</servlet-name>
        <servlet-class>com.shopping.no_mad_gear.servlets.add_category</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register_user</servlet-name>
        <url-pattern>/register_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_user</servlet-name>
        <url-pattern>/login_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout_user</servlet-name>
        <url-pattern>/logout_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add_product</servlet-name>
        <url-pattern>/add_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add_category</servlet-name>
        <url-pattern>/add_category</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
